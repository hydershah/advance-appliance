{
  "name": "advance-appliance-repair",
  "version": "1.0.0",
  "description": "Luxury appliance repair website with PayloadCMS and Next.js",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--no-deprecation' next dev",
    "build": "cross-env NODE_OPTIONS='--no-deprecation' next build",
    "start": "cross-env NODE_OPTIONS='--no-deprecation' next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "generate:types": "payload generate:types",
    "payload": "payload",
    "seed": "ts-node --skip-project src/seed/index.ts",
    "clean": "rm -rf .next out node_modules/.cache",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "cross-env ANALYZE=true next build",
    "verify:seo": "node scripts/verify-seo.js"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "^3.69.0",
    "@payloadcms/db-sqlite": "^3.14.0",
    "@payloadcms/live-preview-react": "^3.14.0",
    "@payloadcms/next": "^3.14.0",
    "@payloadcms/plugin-seo": "^3.14.0",
    "@payloadcms/richtext-lexical": "^3.14.0",
    "@payloadcms/ui": "^3.14.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "framer-motion": "^11.15.0",
    "graphql": "^16.9.0",
    "next": "^15.1.0",
    "payload": "^3.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.2",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.20.2",
    "npm": ">=9.0.0"
  }
}
